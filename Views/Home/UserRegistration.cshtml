@model UserModel;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign UP</title>
</head>
<body>
    
    <form method="post" > 
        
        <input class="form-control" type="text" placeholder="UserName" asp-for="@Model.UserName" required><br />
        <input class="form-control" type="text" placeholder="Email" asp-for="@Model.UserMail" required><br />
        <input class="form-control" type="password" placeholder="Password" asp-for="@Model.Password" required><br />
        <input class="form-control" type="text" placeholder="Phone" asp-for="@Model.Phone" required><br />
        
        @ViewData["Message"]<br />
        <button type="submit" >submit</button>
        
        </form>
    
   
</body>
</html>
